generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(MEMBER)
  firstName String
  lastName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  hashedRefreshToken String?

  loans        Loan[]
  reservations Reservation[]
  auditLogs    AuditLog[]
  inventoryTransactions InventoryTransaction[]
  bookRequests          BookRequest[]
}

enum Role {
  ADMIN
  LIBRARIAN
  MEMBER
}

model Book {
  id          String   @id @default(uuid())
  title       String
  isbn        String   @unique
  publishedYear Int
  copies      Int      @default(1)
  isAvailable Boolean  @default(true)
  description String?
  price       Decimal  @default(0.0)
  coverUrl    String?
  
  authorId    String
  author      Author   @relation(fields: [authorId], references: [id])
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  inventoryItems InventoryItem[]
  loans        Loan[]
  reservations Reservation[]
  
  bookRequests BookRequest[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Author {
  id    String @id @default(uuid())
  name  String
  bio   String?
  books Book[]
}

model Category {
  id          String @id @default(uuid())
  name        String @unique
  description String?
  books       Book[]
}

model Loan {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  bookId     String
  book       Book      @relation(fields: [bookId], references: [id])
  
  borrowedAt DateTime  @default(now())
  dueDate    DateTime
  returnedAt DateTime?
  
  status     LoanStatus @default(ACTIVE)
  fines      Fine[]
  
  // Rule Snapshot
  ruleGracePeriod Int?
  ruleDailyRate   Decimal?
  ruleMaxFine     Decimal?
  ruleLostFee     Decimal?
}

enum LoanStatus {
  ACTIVE
  RETURNED
  OVERDUE
}

model Reservation {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  bookId    String
  book      Book     @relation(fields: [bookId], references: [id])
  status    ReservationStatus @default(PENDING)
  createdAt DateTime @default(now())
}

enum ReservationStatus {
  PENDING
  FULFILLED
  CANCELLED
}

model Fine {
  id        String   @id @default(uuid())
  loanId    String
  loan      Loan     @relation(fields: [loanId], references: [id])
  amount    Decimal
  paid      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model FineRule {
  id        String   @id @default(uuid())
  role      Role     @unique
  gracePeriod Int    @default(0)
  dailyRate   Decimal @default(0.0)
  maxFine     Decimal?
  lostBookProcessingFee Decimal @default(0.0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String
  entityId    String
  entityType  String
  performedBy String
  user        User     @relation(fields: [performedBy], references: [id])
  details     Json?
  createdAt   DateTime @default(now())
}

model InventoryItem {
  id        String     @id @default(uuid())
  bookId    String
  book      Book       @relation(fields: [bookId], references: [id])
  barcode   String     @unique
  status    ItemStatus @default(AVAILABLE)
  location  String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  transactions InventoryTransaction[]
  bookRequest  BookRequest?

  @@index([bookId, status])
}

enum ItemStatus {
  AVAILABLE
  ISSUED
  LOST
  DAMAGED
  RESERVED
}

model InventoryTransaction {
  id              String          @id @default(uuid())
  inventoryItemId String
  inventoryItem   InventoryItem   @relation(fields: [inventoryItemId], references: [id])
  action          InventoryAction
  reason          String?
  performedBy     String
  user            User            @relation(fields: [performedBy], references: [id])
  createdAt       DateTime        @default(now())
}

enum InventoryAction {
  ADD
  STATUS_CHANGE
  REMOVE
}

model BookRequest {
  id              String            @id @default(uuid())
  userId          String
  user            User              @relation(fields: [userId], references: [id])
  bookId          String
  book            Book              @relation(fields: [bookId], references: [id])
  inventoryItemId String?           @unique
  inventoryItem   InventoryItem?    @relation(fields: [inventoryItemId], references: [id])
  
  status          BookRequestStatus @default(PENDING)
  type            BookRequestType
  address         String?           // Only for DELIVERY
  rejectionReason String?
  
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([userId])
  @@index([status])
}

enum BookRequestStatus {
  PENDING
  APPROVED
  OUT_FOR_DELIVERY
  DELIVERY_FAILED
  REJECTED
  FULFILLED
  CANCELLED
}

enum BookRequestType {
  PICKUP
  DELIVERY
}
